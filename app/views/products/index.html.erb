<p id="notice">
    <%= notice %>
</p>

<h1>Products</h1>

<table>
    <thead>
        <tr>
            <th>Sku code</th>
            <th>Product Name</th>
            <% @products.to_a.first.warehouses.each do |warehouse| %>
                <th>
                    <%= warehouse.name %>
                </th>
                <% end %>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td>
                    <%= link_to product.sku_code, edit_product_path(product) %>
                </td>
                <td>
                    <%= product.name %>
                </td>
                <% product.inventory.each do |inventory| %>
                    <td style="background-color:<%=current_class?(inventory)%>;">
                        <%= inventory.item_count %>
                    </td>
                <% end %>
            </tr>
            <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>